# Environment
NODE_ENV=development
DEV_MODE=true  # Set to false in production to enable SMS

# Deployment (local | remote)
DEPLOYMENT_ENV=local
DOMAIN=localhost  # Use procom.uz for remote
PORT=3001
FRONTEND_PORT=3000
DASHBOARD_PORT=3002

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/realestate?schema=public"

# JWT
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRATION=7d

# SMS Provider (Eskiz.uz or similar)
SMS_API_KEY=your-sms-api-key
SMS_API_URL=https://notify.eskiz.uz/api

# Payment Gateways
PAYME_MERCHANT_ID=your-payme-merchant-id
PAYME_SECRET_KEY=your-payme-secret-key
CLICK_MERCHANT_ID=your-click-merchant-id
CLICK_SECRET_KEY=your-click-secret-key

# Map
NEXT_PUBLIC_MAPBOX_TOKEN=your-mapbox-token

# API URLs (Auto-configured based on DEPLOYMENT_ENV)
# Local: http://localhost:3001
# Remote: https://api.procom.uz
NEXT_PUBLIC_API_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000
DASHBOARD_URL=http://localhost:3002

# SSL Configuration (for production/remote deployment)
SSL_ENABLED=false
SSL_KEY_PATH=/etc/ssl/private/procom.uz.key
SSL_CERT_PATH=/etc/ssl/certs/procom.uz.crt
SSL_CA_PATH=/etc/ssl/certs/ca-bundle.crt

# Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
