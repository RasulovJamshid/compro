# Production Environment Configuration for compro.uz
# Copy this file and configure with your actual production values

# Environment
NODE_ENV=production
DEV_MODE=false

# Deployment
DEPLOYMENT_ENV=remote
DOMAIN=compro.uz
PORT=3001
FRONTEND_PORT=3000
DASHBOARD_PORT=3002

# Database (Update with your production database credentials)
DATABASE_URL="postgresql://prod_user:CHANGE_THIS_PASSWORD@localhost:5432/realestate_prod?schema=public"
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=prod_user
DATABASE_PASSWORD=CHANGE_THIS_PASSWORD
DATABASE_NAME=realestate_prod

# JWT (IMPORTANT: Change this to a strong secret key)
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_SECRET_KEY_MIN_32_CHARS
JWT_EXPIRATION=7d

# SMS Provider (Eskiz.uz)
SMS_API_KEY=your-production-sms-api-key
SMS_API_URL=https://notify.eskiz.uz/api

# Payment Gateways
PAYME_MERCHANT_ID=your-production-payme-merchant-id
PAYME_SECRET_KEY=your-production-payme-secret-key
CLICK_MERCHANT_ID=your-production-click-merchant-id
CLICK_SECRET_KEY=your-production-click-secret-key

# Map
NEXT_PUBLIC_MAPBOX_TOKEN=your-production-mapbox-token

# API URLs (Production)
NEXT_PUBLIC_API_URL=https://api.compro.uz
FRONTEND_URL=https://compro.uz
DASHBOARD_URL=https://dashboard.compro.uz

# SSL Configuration
SSL_ENABLED=true
SSL_KEY_PATH=/etc/ssl/private/compro.uz.key
SSL_CERT_PATH=/etc/ssl/certs/compro.uz.crt
SSL_CA_PATH=/etc/ssl/certs/ca-bundle.crt

# Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/opt/compro/uploads
